<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.fazio.utils</groupId>
    <artifactId>FazioUtils</artifactId>
    <version>0.1.3</version>

    <properties>
        <repo-path.release>file://${fazio-mvn-repo-location}/releases</repo-path.release>
        <repo-path.snapshot>file://${fazio-mvn-repo-location}/snapshots</repo-path.snapshot>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>2.5.1</version>
                <executions>
                    <execution>
                        <id>generate-report</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>clean</goal>
                            <goal>cobertura</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!--<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <altDeploymentRepository>snapshot-repo</altDeploymentRepository>
                    <uniqueVersion>false</uniqueVersion>
                    <file>${fazio-mvn-repo-location}/snapshots</file>
                </configuration>
            </plugin>-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <scm>
        <connection>scm:git:git@github.com:MFazio23/Fazio-Utils.git</connection>
        <developerConnection>scm:git:git@github.com:MFazio23/Fazio-Utils.git</developerConnection>
        <url>scm:git:git@github.com:MFazio23/Fazio-Utils.git</url>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>release-repo</id>
            <url>${repo-path.release}</url>
        </repository>
        <snapshotRepository>
            <id>snapshot-repo</id>
            <url>${repo-path.snapshot}</url>
        </snapshotRepository>
    </distributionManagement>
</project>